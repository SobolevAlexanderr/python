string = str(input("введите текст на русском:"))
for i in string:
        print('все символы:'+i)#все символы
ydalenie_str=string[:2] + string[3:]#пропускаем третий символ
print('пропускаем третий символ:'+ydalenie_str)
if "С" in string or 'с' in string:#сообщает
     print("Есть буква с")
else:
     print("Нет буквы с")
