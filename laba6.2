def mod(number):
    result_mod = abs(number)
    return result_mod


def fac(number):
    result_fac = math.factorial(number)
    return result_fac


def arc(number):
    result_arc=math.acos(number)
    return result_arc


if operation == 'mod':
    number = float(input('Ведите число если выбрали mod,!,arccos '))
    result = mod(number)
    print('Ответ: ', result)
    quit()
if operation == '!':
    number = int(input('Ведите число если выбрали mod,!,arccos '))
