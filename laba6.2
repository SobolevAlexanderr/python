def mod(num):
    result_mod = abs(num)
    return result_mod


def fac(num):
    result_fac = math.factorial(num)
    return result_fac


def arc(num):
    result_arc = math.acos(num)
    return result_arc


if operation == 'mod':
    number = float(input('Ведите число если выбрали mod,!,arccos '))
    result = mod(number)
    print('Ответ: ', result)
    quit()
if operation == '!':
    number = int(input('Ведите число если выбрали mod,!,arccos '))
    result = fac(number)
    print('Ответ: ', result)
    quit()
if operation == 'arccos':
    number = float(input('Ведите число если выбрали mod,!,arccos '))
    result = arc(number)
    print('Ответ: ', result)
    quit()
number_one = float(input('Ведите первое число '))
number_two = float(input('Введите второе число:'))


def sum(numb1, numb):
    result_plus = numb1 + numb
    return result_plus


def raz(numb1, numb):
    result_minus = numb1 - numb
    return result_minus


def umn(numb1, numb):
    result_multiply = numb1 * numb
    return result_multiply


def de(numb1, numb):
    result_division = numb1 / numb
    return result_division


def po(numb1, numb):
    result_pow = pow(numb1, numb)
    return result_pow


if operation == '-':
    result = raz(number_one, number_two)
    print('Ответ: ', result)
elif operation == '+':
    result = sum(number_one, number_two)
    print('Ответ: ', result)
elif operation == '*':
    result = umn(number_one, number_two)
    print('Ответ: ', result)
elif operation == '/':
